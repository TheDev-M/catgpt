# ==========================
# Database Configuration
# ==========================
POSTGRES_USER=catgpt
POSTGRES_PASSWORD=catgpt123

# ==========================
# JWT Configuration
# ==========================
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production_minimum_256_bits
JWT_EXPIRATION=3600000  # milliseconds (1 hour)

# ==========================
# Frontend API and Token Settings
# ==========================
# For Docker: Use "PROXY" to route through Nginx proxy (recommended)
# For local dev: Use "http://localhost:8080" to connect directly to backend
VITE_API_BASE_URL=PROXY
VITE_HF_TOKEN=your_huggingface_token_here

# ==========================
# Running Cat Settings
# ==========================
VITE_RUN_DURATION_MS=4000
VITE_RUN_MIN_INTERVAL_MS=120000       # 2 minutes
VITE_RUN_MAX_INTERVAL_MS=300000       # 5 minutes

# ==========================
# Falling Items Settings
# ==========================
VITE_FALL_DURATION_MS=5000
VITE_FALL_MIN_INTERVAL_MS=10000       # 10 seconds
VITE_FALL_MAX_INTERVAL_MS=20000       # 20 seconds

# ==========================
# Decay / Hunger Settings
# ==========================
VITE_HUNGER_INTERVAL_MS=60000         # 1 minute
